@model RentACar.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center">Delete</h1>

<h3 style="text-align:center">Are you sure you want to delete this?</h3>

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive" style="overflow:hidden;">
                <table class="table">
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Status) </th>
                        <th> @Html.DisplayNameFor(model => model.Plate) </th>
                        <th> @Html.DisplayNameFor(model => model.Dailyprice) </th>
                        <th> @Html.DisplayNameFor(model => model.Brand) </th>
                        <th> @Html.DisplayNameFor(model => model.Color) </th>
                        <th> @Html.DisplayNameFor(model => model.Model) </th>

                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Status) </td>
                        <td>@Html.DisplayFor(model => model.Plate) </td>
                        <td>@Html.DisplayFor(model => model.Dailyprice) </td>
                        <td>@Html.DisplayFor(model => model.Brand.Id) </td>
                        <td>@Html.DisplayFor(model => model.Color.Id) </td>
                        <td>@Html.DisplayFor(model => model.Model.Id) </td>
                    </tr>

                </table>
                <form style="text-align:right" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-danger"> Back to List</a>
                </form>

            </div>
        </div>
    </div>
</div>