@model RentACar.Models.Admin

@{
    ViewData["Title"] = "Delete";
}


<h1 style="text-align:center">Delete</h1>

<h3 style="text-align:center">Are you sure you want to delete this?</h3>

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive" style="overflow:hidden;">
                <table class="table">
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Name) </th>
                        <th> @Html.DisplayNameFor(model => model.Surname)</th>
                        <th> @Html.DisplayNameFor(model => model.Email) </th>
                        <th> @Html.DisplayNameFor(model => model.Password)</th>
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Name) </td>
                        <td>@Html.DisplayFor(model => model.Surname) </td>
                        <td>@Html.DisplayFor(model => model.Email) </td>
                        <td>@Html.DisplayFor(model => model.Password) </td>
                    </tr>

                </table>
                <form style="text-align:right" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-danger"> Back to List</a>
                </form>

            </div>
        </div>
    </div>
</div>